" => Colors and Fonts
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Enable syntax highlighting
syntax enable
syntax on

"colorscheme plain
colorscheme hickop
set background=dark
set guifont=Iosevka

let g:solarized_termtrans = 1
let g:solarized_termcolors = 256
let &t_Co=256
let t_Co=256

" Set extra options when running in GUI mode
if has("gui_running")
    set guioptions-=T
    set guioptions+=e
    set t_Co=256
    set guitablabel=%M\ %t
endif


"Cursor Line in Normal mode
:hi CursorLine cterm=underline ctermbg=NONE ctermfg=NONE guibg=black guifg=white
:hi VertSplit ctermbg=NONE guibg=NONE
:hi ColorColumn cterm=underline ctermbg=blue ctermfg=black guibg=black

set colorcolumn=80
autocmd FileType reason set colorcolumn=100
autocmd FileType javascript set colorcolumn=80

highlight clear ALEErrorSign
highlight clear ALEWarningSign
highlight clear SignColumn 

"Comments and keywords
highlight Comment cterm=italic
highlight Statement cterm=bold

let g:ale_change_sign_column_color = 1
